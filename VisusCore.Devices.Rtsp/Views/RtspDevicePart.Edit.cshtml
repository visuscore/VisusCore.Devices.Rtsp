@model RtspDeviceEditViewModel

@using VisusCore.Devices.Rtsp.ViewModels

<fieldset class="form-group" asp-validation-class-for="HostName">
    @Html.LabelFor(model => model.HostName, T["Host Name"].Value)
    @Html.TextBoxFor(model => model.HostName, new { @class = "form-control", @autocomplete="off" })
    @Html.ValidationMessageFor(model => model.HostName, string.Empty, new { @class = "text-danger" })
    <span class="hint">@T["The host name or IP address of the RTSP device."]</span>
</fieldset>
<fieldset class="form-group" asp-validation-class-for="ConnectionTimeout">
    @Html.LabelFor(model => model.ConnectionTimeout, T["Connection Timeout"].Value)
    @Html.TextBoxFor(model => model.ConnectionTimeout, new { @class = "form-control", @autocomplete="off" })
    @Html.ValidationMessageFor(model => model.ConnectionTimeout, string.Empty, new { @class = "text-danger" })
    <span class="hint d-block">@T["Connection timeout in seconds."]</span>
</fieldset>
<div class="form-check">
    <input type="checkbox" class="form-check-input" asp-for="RequireCredentials" data-bs-toggle="collapse" data-bs-target=".requireCredentials">
    @Html.LabelFor(model => model.RequireCredentials, T["Require Credentials"].Value)
    <span class="hint d-block">@T["Check if the device requires credentials to access the video stream."]</span>
</div>
<div class="requireCredentials collapse @(Model.RequireCredentials ? "show" : "")">
    <fieldset class="form-group" asp-validation-class-for="UserName">
        @Html.LabelFor(model => model.UserName, T["Username"].Value)
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autocomplete="off" })
        @Html.ValidationMessageFor(model => model.UserName, string.Empty, new { @class = "text-danger" })
        <span class="hint">@T["The username used for authentication."]</span>
    </fieldset>
    <fieldset class="form-group" asp-validation-class-for="Password">
        @Html.LabelFor(model => model.Password, T["Password"].Value)
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @autocomplete="off" })
        @Html.ValidationMessageFor(model => model.Password, string.Empty, new { @class = "text-danger" })
        <span class="hint">@T["The password used for authentication."]</span>
    </fieldset>
</div>
